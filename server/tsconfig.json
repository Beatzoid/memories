{
    "compilerOptions": {
        "target": "es5",
        "outDir": "dist",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "typeRoots": ["./src/types"],

        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "forceConsistentCasingInFileNames": true,

        "skipLibCheck": true,

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src"],

    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    }
}
